<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="divider">@color/divider</item>
    </style>

    <style name="list_item_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">@dimen/list_item_view_margin</item>
        <item name="android:layout_marginRight">@dimen/list_item_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_item_view_margin</item>
        <item name="android:background">@android:color/white</item>
    </style>
</resources>
