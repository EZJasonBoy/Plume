<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="divider">@color/divider</item>
        <item name="android:windowBackground">@color/primary_light</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="DrawerLayoutTheme" parent="AppTheme"/>

    <style name="ListItemViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/list_item_view_margin</item>
        <item name="android:layout_marginRight">@dimen/list_item_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/list_item_view_margin</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppBarTextStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
