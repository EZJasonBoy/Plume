<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ListItemViewStyle"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/list_item_view_padding"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/list_item_view_image"
            android:layout_height="@dimen/list_item_view_image"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_view_padding"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/big_small_text"/>
    </LinearLayout>
</android.support.v7.widget.CardView>